# Phoenix Configuration
PHX_HOST=localhost
PORT=4000

# Security Secrets
# Generate with: mix phx.gen.secret
SECRET_KEY_BASE=CHANGE_ME_GENERATE_WITH_mix_phx.gen.secret

# Generate with: mix guardian.gen.secret
GUARDIAN_SECRET_KEY=CHANGE_ME_GENERATE_WITH_mix_guardian.gen.secret

# Database Configuration
DATABASE_PATH=/data/mydia.db
POOL_SIZE=5

# Media Library Paths
# Customize these paths to match your media storage locations
MEDIA_PATH_MOVIES=/path/to/your/movies
MEDIA_PATH_TV=/path/to/your/tv_shows
MEDIA_PATH_DOWNLOADS=/path/to/your/downloads

# Optional: OIDC Authentication
# Leave blank to use local authentication only
OIDC_DISCOVERY_DOCUMENT_URI=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=
OIDC_REDIRECT_URI=
OIDC_SCOPES=openid profile email
